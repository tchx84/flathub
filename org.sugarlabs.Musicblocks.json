{
    "app-id": "org.sugarlabs.Musicblocks",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.36",
    "sdk": "org.gnome.Sdk",
    "command": "run.sh",
    "finish-args": [
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio"
    ],
    "modules": [
        {
            "name": "run",
            "buildsystem": "simple",
            "build-commands": [
                "install -D launcher/run.sh /app/bin/run.sh",
                "install -D launcher/main.py /app/bin/main.py",
                "install -D launcher/webview.ui /app/bin/webview.ui",
                "install -D launcher/org.sugarlabs.Musicblocks.appdata.xml /app/share/metainfo/org.sugarlabs.Musicblocks.appdata.xml",
                "install -D launcher/org.sugarlabs.Musicblocks.svg /app/share/icons/hicolor/48x48/apps/org.sugarlabs.Musicblocks.svg",
                "install -D launcher/org.sugarlabs.Musicblocks.desktop /app/share/applications/org.sugarlabs.Musicblocks.desktop",
                "cp -ra main/* /app/bin/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/sugarlabs/musicblocks",
                    "tag": "v3.1",
                    "commit": "5a0e5fc244acd8fa806f78a937165cc2a528e68e",
                    "dest": "main"

                },
                {
                    "type": "git",
                    "url": "https://github.com/sugarlabs/musicblocks-launcher",
                    "tag": "v1.0",
                    "commit": "7ed3335d9c797b13a9c56e46d98a0e16463e5e9d",
                    "dest": "launcher"
                }
            ]
        }
    ]
}
